lib {
	txRkwWepstraMenu = HMENU
	txRkwWepstraMenu {

		special = directory
		special.value = {$plugin.tx_rkwwepstra.settings.menuPid}
		entryLevel = 0

		1 = TMENU
		1 {
			expAll = 1
			wrap =

